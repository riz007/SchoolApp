<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Student Management Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="loginPage">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Student Management System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (Request.IsAuthenticated)
                    {
                        <strong>@Html.Encode(User.Identity.Name)</strong>
                        <li>@Html.ActionLink("Sign Out", "Logout", "User")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Register", "Register", "User")</li>
                        <li>@Html.ActionLink("Sign In", "Login", "User")</li>
                    }


                </ul>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryeasing")
    @Scripts.Render("~/bundles/admin")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/datatables-demo")
    @Scripts.Render("~/bundles/datatables-bootstrap4")
    @Scripts.Render("~/bundles/chartjs")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/momentjs")
    @RenderSection("scripts", required: false)

</body>
</html>
